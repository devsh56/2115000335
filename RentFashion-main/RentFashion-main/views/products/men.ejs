<% layout('layouts/boilerplate') %>
    <%- include('../partials/navbar') %>
    <style>
        hr {
            color: grey;
        }
        button a{
            color: black;
        }
        a:hover {
            color: white;
        }
    </style>
<body style="background-color: #fffbf2;">
    <h2 style="padding: 5px;margin-top: 5px;">Home/Men</h2>
    <div class="search-container" style="padding: 20px;">
        <input type="text" id="search-box" placeholder="Search for men..." style="width: 80%; padding: 10px; border: 1px solid #ccc;">
        <button type="button" onclick="performSearch()" style="padding: 10px; border: 1px solid #ccc; background-color: #faf1dd;">Search</button>
    </div>
        <div class="row" style="display: flex;width: 100%; padding: 40px;">
            <%for(let item of result){%>

                <div class="card" style="width: 18rem; border: 1px solid #faf1dd ;margin:10px; padding: 10px;">
                    <img class="card-img-top" src="<%=item.image%>" alt="Card image cap"
                        style="width: 267px; height: 267px; border-radius: 5px;">
                    <div class="card-body">
                        <h2 class="card-title">
                            <%=item.name%>
                        </h2>
                        <h3>₹ <%=item.price%>
                        </h3>
                        <p class="card-text">
                            <%=item.desc%>
                        </p>
                    </div>
                    <div class="card-body">
                        <button type="button" class="btn btn-outline-dark"> <a href="/products/<%=item._id%>"
                                style="text-decoration: none;">View Product</a></button>
                    </div> 
                    <%if(currentUser && currentUser.role==='seller' ){%>
                        <form action="/products/<%=item._id%>?_method=delete" method="post">
                            <button class="abcd">Delete</button>
                            </form>
                    <%}%>
                </div>
                <%}%>
        </div>

        <br>  
        <script>
            function performSearch() {
                const query = document.getElementById('search-box').value;
                fetch(`/search?q=${query}`)
                    .then(response => response.json())
                    .then(data => {
                        const resultsContainer = document.getElementById('results');
                        resultsContainer.innerHTML = '';
                        data.forEach(item => {
                            const card = document.createElement('div');
                            card.classList.add('card');
                            card.style.width = '18rem';
                            card.style.border = '1px solid #faf1dd';
                            card.style.margin = '10px';
                            card.style.padding = '10px';
    
                            const img = document.createElement('img');
                            img.classList.add('card-img-top');
                            img.src = item.image;
                            img.alt = 'Card image cap';
                            img.style.width = '267px';
                            img.style.height = '267px';
                            img.style.borderRadius = '5px';
    
                            const cardBody = document.createElement('div');
                            cardBody.classList.add('card-body');
    
                            const title = document.createElement('h2');
                            title.classList.add('card-title');
                            title.textContent = item.name;
    
                            const rentPrice = document.createElement('h2');
                            rentPrice.textContent = 'Rent prize';
    
                            const cardTitle = document.createElement('h2');
                            cardTitle.classList.add('card-title');
                            cardTitle.textContent = item.money;
    
                            const price = document.createElement('h3');
                            price.textContent = `₹ ${item.price}`;
    
                            const desc = document.createElement('p');
                            desc.classList.add('card-text');
                            desc.textContent = item.desc;
    
                            const viewButton = document.createElement('button');
                            viewButton.type = 'button';
                            viewButton.classList.add('btn', 'btn-outline-dark');
                            const viewLink = document.createElement('a');
                            viewLink.href = `/products/${item._id}`;
                            viewLink.style.textDecoration = 'none';
                            viewLink.textContent = 'View Product';
                            viewButton.appendChild(viewLink);
    
                            cardBody.appendChild(title);
                            cardBody.appendChild(rentPrice);
                            cardBody.appendChild(cardTitle);
                            cardBody.appendChild(price);
                            cardBody.appendChild(desc);
                            cardBody.appendChild(viewButton);
    
                            card.appendChild(img);
                            card.appendChild(cardBody);
    
                            resultsContainer.appendChild(card);
                        });
                    });
            }
        </script>
    <%- include('../partials/footer') %>
</body>