<% layout('layouts/boilerplate') %>
    <%- include('../partials/navbar') %>

        <div style="background-color: #fffbf2;">

            <ul>
                <div class="detail-section">
                    <div class="detail-section-img">
                        <img src="<%=foundProduct.image%>" alt="">
                    </div>
                    <div class="detail-section-text">
                        <h1>
                            <%=foundProduct.name%>
                        </h1>
                        <h3> ₹ <%=foundProduct.price%>
                        </h3>
                        <h3> ₹ <%=foundProduct.money%>
                        </h3>
                        <div>
                            <%=foundProduct.desc%>
                        </div>
                        <%if(currentUser && currentUser.role==='seller' ){%>
                            <br>
                            <a href="/products/<%=foundProduct._id%>/edit"
                                style="text-decoration: none;color:green;" class="abcd">Edit</a>
                            <%}%>
                            <a href="/products/<%=foundProduct._id%>/rent"
                                style="text-decoration: none;color:green;" class="abcd">Rent</a>
                                <br>
                                <br>
                                <form action="/user/<%=foundProduct._id%>/add" method="post" ">
                                    <!-- <button type=" submit">Add Product to cart</button> -->
                                    <button type="submit" class="btn btn-secondary">Add Product to cart</button>
                                    <br>
                                    <div class="cart-btn abcd"><a href="/product/payment"><b style="color: black;">BUY</b></a> </div>
                                    <br>
                                </form>

                    </div>
                </div>



                <div>
                    <br><br>
                    <div class="rating-record">
                        <h5>Leave a Reviews </h5>
                        <!-- <label for="">Rating:</label> -->
                    
                    <form action="/products/<%=foundProduct._id%>/review" method="post">
                        <fieldset class="starability-basic">
                            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                                aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="rating" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="rating" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="rating" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="rating" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="rating" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                        <br>
                        <label for="comment">Comment:</label>
                        <textarea name="comment" id="" cols="" rows="5" ></textarea>
                        <br>

                        <button class="btn btn-secondary">Submit</button>

                    </form>
                    </div>
                    
                    <br><br>
                    <div class="comment-view-main">
                        <% if(foundProduct.reviews.length>0){%>
                            <h2>Reviews</h2>
                            <%}%>
                                <div class="comment-view">
                                    <% for(let review of foundProduct.reviews){%>
                                        <h5>
                                            <%=review.comment%>
                                        </h5>
                                        <div class="comment">
                                            <h5>
                                                Rating:<%=review.rating%>
                                                    <img src="/public/icon/star.png" alt="">
                                            </h5>

                                            <br>
                                        </div>
                                        <hr>
                                        <%}%>
                                </div>

                    </div>

                </div>







